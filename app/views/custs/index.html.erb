<% @custs.each do |cust| %>
  <tr>
    <td><%= cust.name %></td>
    <td><%= cust.email %></td>
    <td><%= cust.address %></td>
    <td><%= link_to 'Show', cust %></td>
    <td><%= link_to 'Edit', edit_cust_path(cust) %></td>
    <td><%= link_to 'Destroy', cust, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

